@model ProyectoInmobiliaria.Models.Propietario

@{
    ViewData["Title"] = "Eliminar Propietario";
}

<h2>¿Estás seguro que querés eliminar este propietario?</h2>

<div>
    <h4>@Model.Nombre @Model.Apellido</h4>
    <p>DNI: @Model.Documento</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="IdPropietario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
