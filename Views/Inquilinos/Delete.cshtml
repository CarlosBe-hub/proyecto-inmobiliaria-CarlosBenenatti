@model ProyectoInmobiliaria.Models.Inquilino
@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Eliminar Inquilino</h2>
    <h4>¿Estás seguro que deseas eliminar este inquilino?</h4>

    <div class="alert alert-danger mt-3">
        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Apellido:</strong> @Model.Apellido</p>
        <p><strong>Documento:</strong> @Model.Documento</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Teléfono:</strong> @Model.Telefono</p>
        <p><strong>Dirección:</strong> @Model.Direccion</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdInquilino" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
