@model IEnumerable<ProyectoInmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";

    int currentPage = ViewBag.PaginaActual ?? 1;
    int pageSize = ViewBag.TamPagina ?? 10;
    string? q = ViewBag.Filtro as string;
    bool? activos = ViewBag.Activos as bool?;
}

<h2 class="mb-4">Inquilinos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> + Nuevo Inquilino
    </a>
</p>


<form asp-action="Index" method="get" class="row mb-3 g-2">
    <div class="col-md-4">
        <input type="text" name="q" value="@q" class="form-control" placeholder="Buscar por nombre, apellido o documento..." />
    </div>
    <div class="col-md-3">
        <select name="activos" class="form-select">
           <option value="">-- Todos --</option>
           <option value="true" selected="@(activos == true)">Activos</option>
           <option value="false" selected="@(activos == false)">Dados de baja</option>
</select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>

<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Nombre)</th>
            <th>@Html.DisplayNameFor(m => m.First().Apellido)</th>
            <th>@Html.DisplayNameFor(m => m.First().Documento)</th>
            <th>@Html.DisplayNameFor(m => m.First().Telefono)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var i in Model)
            {
                <tr>
                    <td>@i.Nombre</td>
                    <td>@i.Apellido</td>
                    <td>@i.Documento</td>
                    <td>@i.Telefono</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@i.IdInquilino" class="btn btn-info btn-sm text-white">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Edit" asp-route-id="@i.IdInquilino" class="btn btn-warning btn-sm text-dark">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@i.IdInquilino" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No hay inquilinos disponibles.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación -->
<div class="d-flex justify-content-between align-items-center mt-3">
    <a asp-action="Index"
       asp-route-pagina="@(currentPage - 1)"
       asp-route-q="@q"
       asp-route-activos="@activos"
       class="btn btn-outline-primary @(currentPage <= 1 ? "disabled" : "")">
        Anterior
    </a>

    <span>Página @currentPage</span>

    <a asp-action="Index"
       asp-route-pagina="@(currentPage + 1)"
       asp-route-q="@q"
       asp-route-activos="@activos"
       class="btn btn-outline-primary @(Model == null || Model.Count() < pageSize ? "disabled" : "")">
        Siguiente 
    </a>
</div>
