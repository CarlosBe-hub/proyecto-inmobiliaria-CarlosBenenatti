<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 1000;
        }
        .content-wrapper {
            margin-left: 25%;
            padding-top: 40px;
        }
        .user-card {
            position: absolute;
            top: 10px; 
            right: 20px;
            padding: 8px; 
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            width: auto; 
        }
        .user-card img {
            width: 38px; 
            height: 30px;
            border-radius: 30%;
            margin-right: 8px; 
        }
        .user-card .dropdown-menu {
            min-width: 180px; 
        }
        .dropdown-menu .dropdown-item {
            font-size: 14px;
        }
        .user-card .dropdown-toggle {
            padding: 0;
            background: none;
            border: none;
        }
        .user-card .dropdown-toggle i {
            color: #495057;
        }
        .user-card .dropdown-menu a {
            color: #495057;
        }
        .user-card .dropdown-menu a:hover {
            background-color: #f8f9fa;
        }

        
        .jumbotron {
            padding: 40px 100px; 
            background-size: cover; 
            margin-top: 15px; 
        }
        .jumbotron h1 {
            font-size: 2.8rem; 
        }
        .jumbotron p {
            font-size: 1.7rem; 
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar lateral -->
            <div class="col-md-3 sidebar bg-dark text-white p-3">
                <h3 class="text-center">Gestionar Inmobiliaria</h3>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active text-white" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Propietarios")">
                            <i class="fas fa-users"></i> Propietarios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Inquilinos")">
                            <i class="fas fa-building"></i> Inquilinos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Inmueble")">
                            <i class="fas fa-home"></i> Inmuebles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Contrato")">
                            <i class="fas fa-file-contract"></i> Contratos
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Contenido principal -->
            <div class="col-md-9 content-wrapper">
                <div class="jumbotron mt-5">
                    <h1 class="display-4 text-center">Bienvenido a la Inmobiliaria</h1>
                    <p class="lead text-center">Aquí podrás gestionar todos los aspectos relacionados con propietarios, inquilinos, inmuebles y contratos.</p>
                </div>

                <!-- Burbuja de avatar y menú -->
                @{
                    var avatar = "/img/default-avatar.png";  
                    var nombreCompleto = "";  

                    if (User.Identity.IsAuthenticated)
                    {
                        avatar = User.Claims.FirstOrDefault(c => c.Type == "Avatar")?.Value ?? avatar;
                        nombreCompleto = User.Claims.FirstOrDefault(c => c.Type == "NombreCompleto")?.Value ?? nombreCompleto;
                    }
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-card">
                        <img src="@Url.Content(avatar)" alt="Avatar">  <!-- Cambio aquí -->
                        <div>
                            <div>@nombreCompleto</div>
                            <div class="dropdown">
                                <button class="btn btn-link dropdown-toggle" type="button" id="userMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-cogs"></i> <!-- Icono de configuraciones -->
                                </button>
                                <div class="dropdown-menu" aria-labelledby="userMenu">
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Create", "Usuarios")">
                                            <i class="fas fa-user-plus"></i> Crear Usuario
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Usuarios")">
                                            <i class="fas fa-users"></i> Usuarios
                                        </a>
                                    }
                                    <!-- Opción común para Admin y Empleado -->
                                    <a class="dropdown-item" href="@Url.Action("EditarPerfil", "Usuarios")">
                                        <i class="fas fa-edit"></i> Editar Perfil
                                    </a>

                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <!-- Aquí puedes agregar otras opciones para el Administrador -->
                                    }

                                    <!-- Opción de Cerrar sesión -->
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Usuarios")">
                                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
