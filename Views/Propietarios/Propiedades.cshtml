@model IEnumerable<ProyectoInmobiliaria.Models.Inmueble>
@{
    ViewData["Title"] = "Propiedades";
    var propietario = ViewBag.Propietario as ProyectoInmobiliaria.Models.Propietario;
}

<h2 class="mb-3">Inmuebles de @propietario?.Nombre</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Este propietario no tiene inmuebles cargados.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Direcci√≥n</th>
                <th>Tipo de Inmueble</th>
                <th>Propietario</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Direccion</td>
                <td>@i.TipoInmueble</td>
                <td>@i.Propietario?.NombreCompleto</td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        Volver a Propietarios
    </a>
</div>
