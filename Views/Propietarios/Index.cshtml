@model IEnumerable<ProyectoInmobiliaria.Models.Propietario>

@{
    ViewData["Title"] = "Propietarios";
}

<h2 class="mb-4">Propietarios</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> + Nuevo Propietario
    </a>
</p>

<table id="propietariosTable" class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nombre Completo</th>
            <th>@Html.DisplayNameFor(m => m.First().Documento)</th>
            <th>@Html.DisplayNameFor(m => m.First().Telefono)</th>  
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.NombreCompleto</td>
                <td>@p.Documento</td>
                <td>@p.Telefono</td> 
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@p.IdPropietario" class="btn btn-info btn-sm text-white">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Edit" asp-route-id="@p.IdPropietario" class="btn btn-warning btn-sm text-dark">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@p.IdPropietario" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                    <a asp-action="Propiedades" asp-route-id="@p.IdPropietario" class="btn btn-success btn-sm">
                        <i class="bi bi-house-door"></i> Propiedades
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#propietariosTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                }
            });
        });
    </script>
}
