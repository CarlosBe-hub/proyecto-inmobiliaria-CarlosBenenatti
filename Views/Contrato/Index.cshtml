@model IEnumerable<ProyectoInmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
    var pageNumber = ViewBag.PageNumber as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 5;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<h2 class="mb-4">Contratos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> + Nuevo Contrato
    </a>
</p>

<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Inquilino?.Nombre @c.Inquilino?.Apellido</td>
                <td>@c.Inmueble?.Direccion</td>
                <td>@c.FechaInicio.ToShortDateString()</td>
                <td>@c.FechaFin.ToShortDateString()</td>
                <td>@c.Monto.ToString("C")</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@c.IdContrato" class="btn btn-info btn-sm text-white">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Edit" asp-route-id="@c.IdContrato" class="btn btn-warning btn-sm text-dark">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@c.IdContrato" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- PaginaciÃ³n -->
<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)" asp-route-pageSize="@pageSize">Anterior</a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize">@i</a>
            </li>
        }

        <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)" asp-route-pageSize="@pageSize">Siguiente</a>
        </li>
    </ul>
</nav>
