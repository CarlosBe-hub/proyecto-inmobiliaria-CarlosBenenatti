@model ProyectoInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Editar Contrato";
}

<h2 class="mb-4">Editar Contrato</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdContrato" />
    <input type="hidden" asp-for="InmuebleId" />
    <input type="hidden" asp-for="InquilinoId" />
    <input type="hidden" asp-for="FechaInicio" />

    <div class="mb-3">
        <label class="form-label">Fecha de Inicio</label>
        <input class="form-control" value="@Model.FechaInicio.ToString("dd/MM/yyyy")" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="FechaFin" class="form-label"></label>
        <input asp-for="FechaFin" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Inmueble</label>
        <input class="form-control" value="@Model.Inmueble?.Direccion" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Inquilino</label>
        <input class="form-control" value="@($"{Model.Inquilino?.Nombre} {Model.Inquilino?.Apellido}")" readonly />
    </div>

    <button type="submit" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Guardar Cambios
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
