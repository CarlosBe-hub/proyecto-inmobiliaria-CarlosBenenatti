@{
    ViewData["Title"] = "Usuarios";
}

<h2>@ViewData["Title"]</h2>

<!-- Mostrar mensajes de éxito o error -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Éxito!</strong> @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @TempData["ErrorMessage"]
    </div>
}

<!-- Tabla de usuarios -->
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Apellido</td>
                <td>@usuario.Email</td>
                <td>@usuario.Rol</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit", "Usuarios", new { id = usuario.IdUsuario })">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Usuarios", new { id = usuario.IdUsuario })" onclick="return confirm('¿Estás seguro de eliminar este usuario?');">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>
